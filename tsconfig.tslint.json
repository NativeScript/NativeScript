{
    "compilerOptions": {
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "target": "es5",
        "module": "commonjs",
        "noImplicitUseStrict": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "diagnostics": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "nativescript-core",
        "tns-core-modules-package",
        "tests",
        "e2e"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/platforms/**"
    ]
}